<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Name</th>
      <th>Snippet</th>
      <th>Category</th>
      <th>Posted time</th>
      <th>Posted time friendly</th>
      <th>Url</th>
      <th>Location</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Salary source</th>
      <th>Salary interval</th>
      <th>Salary max</th>
      <th>Salary max annual</th>
      <th>Salary min</th>
      <th>Industry name</th>
      <th>Hiring company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.source %></td>
        <td><%= job.name %></td>
        <td><%= job.snippet.html_safe %></td>
        <td><%= job.category %></td>
        <td><%= job.posted_time %></td>
        <td><%= job.posted_time_friendly %></td>
        <td><%= link_to 'Apply', job.url %></td>
        <td><%= job.location %></td>
        <td><%= job.city %></td>
        <td><%= job.state %></td>
        <td><%= job.country %></td>
        <td><%= job.salary_source %></td>
        <td><%= job.salary_interval %></td>
        <td><%= number_to_currency(job.salary_max) %></td>
        <td><%= number_to_currency(job.salary_max_annual) %></td>
        <td><%= number_to_currency(job.salary_min) %></td>
        <td><%= job.industry_name %></td>
        <td><%= job.hiring_company['name'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @has_prev %>
<%= link_to 'Previous', @prev_link %>
<% end %>

<% if @has_next %>
<%= link_to 'Next', @next_link %>
<% end %>


<br>

