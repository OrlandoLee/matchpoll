<p id="notice"><%= notice %></p>

<h1><%=@total_jobs%> Jobs found for you</h1>
<%= link_to 'Re-Search', root_path %>
<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Name</th>
      <th>Description</th>
      <th>Posted time</th>
      <th>Posted time friendly</th>
      <th>Location</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Salary</th>
      <th>Industry name</th>
      <th>Hiring company</th>
      <th>Apply</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.source %></td>
        <td><%= job.name %></td>
        <td><%= job.snippet.html_safe %></td>
        <td><%= job.posted_time %></td>
        <td><%= job.posted_time_friendly %></td>
        <td><%= job.location %></td>
        <td><%= job.city %></td>
        <td><%= job.state %></td>
        <td><%= job.country %></td>
        <td><%= number_to_currency(job.salary_min) %> - <%=number_to_currency(job.salary_max)%> <%=job.salary_interval %></td>
        <td><%= job.industry_name %></td>
        <td><%= job.hiring_company['name'] %></td>
		<td><%= link_to 'Apply', job.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @has_prev %>
<%= link_to 'Previous', @prev_link %>
<% end %>

<% if @has_next %>
<%= link_to 'Next', @next_link %>
<% end %>


<br>

